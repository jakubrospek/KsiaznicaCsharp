
@model KsiaznicaCsharp.ViewModels.RegisterViewModel


@{
    ViewBag.Title = "SignIn";
}



<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Książnica</title>
    <link href="../Content/css/style.css" rel="stylesheet" type="text/css" media="all">
</head>
<body>
    <div id="wrapper">

        <header>
            <img id="logo" src="../Content/Images/logo.jpg">
        </header>

        <hr />

        <div id="sidebar">
            <nav id="menu">

                <ul>
                    <li><a href="@Url.Action("LogIn")">Zaloguj</a></li>
                    <li><a href="@Url.Action("SignIn")">Zarejestruj</a></li>
                </ul>
            </nav>

            <aside>

                <p>"Ten, kto czyta książki, przeżywa tysiąc żyć zanim umrze. Ten, kto nie czyta, żyje tylko raz."</p>
                <h5>George R.R. Martin</h5></p>

            </aside>

        </div>

        <div id="main">

            <section id="content">

                <h2>Rejestracja</h2>

                <article>

                    <!-- <form action="Zarejestroj.php" method="post"> -->
            @using (@Html.BeginForm("SignIn", "Account"))
            {
                        @Html.AntiForgeryToken()
                        <p>
                            @Html.LabelFor(o => o.Login)
                        @Html.TextBoxFor(o => o.Login)
                        @Html.ValidationMessageFor(o => o.Login)
                    </p><br>
                        <p>
                            @Html.LabelFor(o => o.Password)
                        @Html.TextBoxFor(o => o.Password)
                        @Html.ValidationMessageFor(o => o.Password)
                    </p><br>
                        <p>
                            @Html.LabelFor(o => o.ConfirmPassword)
                        @Html.TextBoxFor(o => o.ConfirmPassword)
                        @Html.ValidationMessageFor(o => o.ConfirmPassword)
                    </p><br>
                        <!-- <p style="margin-left:71px">Login: <input type="text" name="Login" /></p></br>
                        <p style="margin-left:71px">Hasło: <input type="password" name="Haslo" /></p></br>
                        <p>Powtórz Hasło: <input type="password" name="Haslo2" /></p></br> -->
                        <input type="submit" value="Zarejestruj" name="submit" />
                    }
                    <!-- </form> -->

                </article>

            </section>

        </div>

        <footer>

            <p>
                Copyright &copy;2015 | <a href="Glowna.php">Książnica</a>
            </p>

        </footer>

    </div>
</body>
</html>

