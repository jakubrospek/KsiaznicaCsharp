
@model KsiaznicaCsharp.ViewModels.LoginViewModel

@{ 
        ViewBag.Title = "Login";
}


<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Książnica</title>
    <link href="../Content/css/style.css" rel="stylesheet" type="text/css" media="all">
</head>
<body>
    <div id="wrapper">

        <header>
            <img id="logo" src="../Content/Images/logo.jpg">
        </header>

        <hr />

        <div id="sidebar">
            <nav id="menu">
                <ul>
                    <li><a href="@Url.Action("LogIn")">Zaloguj</a></li>
                    <li><a href="@Url.Action("SignIn")">Zarejestruj</a></li>
                </ul>
            </nav>

            <aside>

                <p>"Ten, kto czyta książki, przeżywa tysiąc żyć zanim umrze. Ten, kto nie czyta, żyje tylko raz."</p>
                <h5>George R.R. Martin</h5></p>

            </aside>

        </div>

        <div id="main">

            <section id="content">

                <h2>Zaloguj</h2>

                <article>
                    <!--<form action="Zaloguj.php" method="post">-->
                @using (@Html.BeginForm("LogIn", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <p>@Html.LabelFor(o => o.Login)
                    @Html.TextBoxFor(o => o.Login)
                    @Html.ValidationMessageFor(o => o.Login)</p><br>
                    <p>@Html.LabelFor(o => o.Password)
                    @Html.TextBoxFor(o => o.Password)
                    @Html.ValidationMessageFor(o => o.Password)</p><br>
                        <p>@Html.CheckBoxFor(m => m.RememberMe, new { @checked = "checked" })
                        @Html.LabelFor(m => m.RememberMe)</p><br>

                        <!-- <p>Login: <input type="text" name="Login" /></p><br>
                        <p>Hasło: <input type="password" name="Haslo" /></p><br> -->
                        <input type="submit" value="Zaloguj" name="submit" />
                }
                     <!--</form>-->
                </article>

            </section>

        </div>
                
        <footer>

            <p>
                Copyright &copy;2015 | <a href="Glowna.php">Książnica</a>
            </p>

        </footer>

    </div>
</body>
</html>